{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "outDir": "build",
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "noEmitOnError": false,
    "stripInternal": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es5", "dom", "es2015.iterable", "es2015.promise"]
  },
  "exclude": ["node_modules", "build", "dist"]
}
